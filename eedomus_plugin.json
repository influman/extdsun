			"name_fr": "Soleil étendu - Levé",
			"icon": "sunrise.png",
			"utilisation_id": "35",
			"parameters":
			{
				"VAR1": "plugin.parameters.LONG",
				"VAR2": "plugin.parameters.LAT",
      	"VAR3": "plugin.parameters.DELAY",
				"value_type": "string",
				"ignore_errors": 3,
				"RAW_URL": "http://localhost/script/?exec=extdsun.php&long=[VAR1]&lat=[VAR2]&delay=[VAR3]",
